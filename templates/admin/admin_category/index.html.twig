{% extends 'admin.base.html.twig' %}

{% block dashboard %}
<section class="gap-40">
    <h1>Liste des Catégories</h1>

    <a class="btn btn-green" href="{{ path('admin_category_add') }}">Ajouter une catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a class="icon-action" href="{{ path('admin_category_show', { id: category.id }) }}">
                        <img src="{{ asset('icons/icon-view.svg') }}" alt="View">
                    </a>

                    <a class="icon-action" href="{{ path('admin_category_edit', { id: category.id }) }}">
                        <img src="{{ asset('icons/icon-edit.svg') }}" alt="Edit">
                    </a>

                    {# <a class="icon-action" href="{{ path('admin_category_delete', { id: category.id }) }}">
                        <img src="{{ asset('icons/icon-delete.svg') }}" alt="Delete">
                    </a> #}

                    {# <a class="icon-action" href="{{ path('admin_category_delete', { id: category.id }) }}"
                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                        <img src="{{ asset('icons/icon-delete.svg') }}" alt="Delete">
                    </a> #}

                    <a class="icon-action delete-action"
                        data-url="{{ path('admin_category_delete', { id: category.id }) }}">
                        <img src="{{ asset('icons/icon-delete.svg') }}" alt="Delete">
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>

<div class="modal-overlay" id="confirmModal">
    <div class="modal-content flex flex-column gap-20">
        <p>Êtes-vous sûr de vouloir supprimer cette catégorie ?</p>
        <div class="flex justify-center gap-20">
            <button class="btn btn-red" id="confirmDelete">Supprimer</button>
            <button class="btn btn-primary" id="cancelDelete">Annuler</button>
        </div>
    </div>
</div>

{% endblock %}